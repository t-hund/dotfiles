#=======================================================================
# EditorConfig
#=======================================================================
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h,cpp,java}]
indent_style = space
indent_size = 4

[*.{clj,elm,hs,rb,scala,sml,html,ts}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[{M,m}akefile]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false
